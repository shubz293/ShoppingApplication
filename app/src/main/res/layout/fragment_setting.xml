<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/interfaceColor"
    android:padding="@dimen/layout_padding"
    android:orientation="vertical"

    tools:context="com.majorproject.groceryshopping.shoppingapplication.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="@dimen/button_margin_top"
        >
        <TextView
            android:id="@+id/my_account_header_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textSize="20sp"
            android:text="My Account"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:padding="@dimen/layout_padding"
        android:background="@drawable/fragment_background"
        >

        <TextView
            android:id="@+id/my_account_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/button_margin_top"
            android:textSize="@dimen/normal_text_size"
            />
        <TextView
            android:id="@+id/my_account_email"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Email"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/button_margin_top"
            android:textSize="@dimen/normal_text_size"
            />
        <TextView
            android:id="@+id/my_account_dob"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="D.O.B."
            android:textColor="@color/black"
            android:paddingBottom="@dimen/button_margin_top"
            android:textSize="@dimen/normal_text_size"
            />
        <TextView
            android:id="@+id/my_account_contact"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="contact"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/button_margin_top"
            android:textSize="@dimen/normal_text_size"
            />
        <TextView
            android:id="@+id/my_account_address"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Address"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/button_margin_top"
            android:textSize="@dimen/normal_text_size"
            />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"

            >
            <Button
                android:id="@+id/my_account_button_update_profile"
                android:text="@string/my_account_update_profile_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:layout_marginTop="@dimen/layout_padding"
                android:layout_gravity="bottom"/>

            <Button
                android:id="@+id/my_account_button_change_password"
                android:text="@string/my_account_change_password_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:layout_marginTop="@dimen/layout_padding"
                android:layout_gravity="bottom"/>

        </LinearLayout>

    </GridLayout>


</FrameLayout>
